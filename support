from os import walk
import pygame as pg





def import_folder(path):
    surface_list = []
    for img_files in walk(path):
        for image in img_files:
            full_path = path + '/' + image
            image_surf = pg.image.load(full_path).convert_alpha()
            surface_list.append(image_surf)
    return surface_list


#print(import_folder('2.png'))

